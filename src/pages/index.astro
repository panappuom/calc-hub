---
import "../styles/global.css";
const tools = [
  { href: "/calculators", title: "計算機ハブ（税/体積/画像dpi/歩数→距離...）", desc: "完全静的・ノーAPI・壊れにくい常緑装置" }
];
---
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>自動化工場 v0.1</title>
  </head>
  <body>
    <div class="wrap">
      <h1>自動化工場 v0.1</h1>
      <p class="small">このリポをテンプレにして複数装置を量産</p>
      <div class="grid" style="margin-top:20px">
        {tools.map(t => (
          <a class="card" href={t.href}>
            <h2>{t.title}</h2>
            <p>{t.desc}</p>
            <span class="btn">開く</span>
          </a>
        ))}
      </div>
    </div>
  </body>
</html>
